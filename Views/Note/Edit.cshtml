@{
	ViewData["title"] = "Edit Note";
}
@using MyNotes.ViewModels;
@model NoteVM;

<div class="row d-flex justify-content-center">
	<div class="col-md-4 p-3 card">
		<h4 class="text-center text-info">
			Edit Note
		</h4>
		<form method="post" action="Edit">
			<div asp-validation-summary="ModelOnly">
			</div>

			<div class="form-group mb-2">
				<label asp-for="NoteTitle"></label>
				<input asp-area="NoteTitle" asp-for="NoteTitle" class="form-control" />
				<span asp-validation-for="NoteTitle"></span>
			</div>

			<div class="form-group mb-2">
				<label asp-for="NoteDescription"></label>
				<input asp-for="NoteDescription" class="form-control" />
				<span asp-validation-for="NoteDescription"></span>
			</div>
			<input type="hidden" asp-for="NoteId" />
			<input type="submit" class="btn btn-primary" value="Edit" />

		</form>
	</div>

</div>