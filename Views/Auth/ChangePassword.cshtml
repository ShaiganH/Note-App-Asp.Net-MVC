@{
	ViewData["title"] = "Change Password";
}
@using MyNotes.ViewModels;
@model ChangePasswordVM;

<div class="row d-flex justify-content-center">
    <div class="col-md-3 card p-3">
        
            <h4 class="text-info text-center"> 
                Change Password
            </h4>

            <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Token" />

                <div class="form-group mb-2 ">
                <label asp-for="NewPassword" class="mb-1"></label>
                    <input asp-for="NewPassword" class="form-control " />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>
                <div class="form-group mb-2">
                <label asp-for="ConfirmPassword" class="mb-1"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

                <input class="mb-1 btn btn-primary mt-3" type="submit" value="Change Password"/>
            </form>

       
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
